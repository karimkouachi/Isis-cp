{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header %}{% endblock %} 

{% block body %}
    <div class="row">
        <div class="container">
            <form method="post" action="{{path('security_login')}}">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# {% if app.user %}
                    <div class="">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %} #}

                <div class="row">
                    <h3 class="">CONNEXION</h3>
                </div>
                
                <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="" required autofocus>
                    {# <input type="text" value="{{ last_username }}" name="username" id="inputUsername" required autofocus> #}
                    <label for="inputEmail" class="">Email</label>
                </div>

                <div class="input-field">
                    <i class="material-icons prefix">lock</i>
                    <input type="password" name="_password" id="inputPassword" required>
                    <label for="inputPassword" class="">Mot de passe</label>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <div class="right">
                    <button class="bouton btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>

                    {% if not app.user %}
                        <a class="bouton btn btn-lg btn-primary" href="{{path('security_registration')}}">
                            Inscription
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).ready(function(){
            $('body').hide().fadeIn(1500).delay(1500);
        });
    </script>
{% endblock %}